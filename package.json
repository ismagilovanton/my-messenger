{
  "name": "yandex-chat",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "targets": {
    "default": {
      "includeNodeModules": true
    }
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "start": "npm run build && npm run dev",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:style": "stylelint \"**/*.scss\"",
    "lint:style:fix": "stylelint \"**/*.scss\" --fix",
    "test": "mocha --require ts-node/register --require ./test/setup.ts 'src/**/*.spec.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint:all test",
      "pre-push": "npm run other command"
    }
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "chai": "^5.2.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-chai-friendly": "^1.1.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "mocha": "^11.6.0",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^7.0.2",
    "stylelint": "^16.19.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "@types/node": "^24.0.1",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.0",
    "ts-node": "^10.9.2"
  }
}
