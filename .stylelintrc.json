{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-standard-scss"
    ],
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "order/properties-alphabetical-order": true,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ],
        "no-descending-specificity": null,
        "selector-class-pattern": null
    }
}